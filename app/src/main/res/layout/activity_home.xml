<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_preloader_black">

    <FrameLayout
        android:id="@+id/flayout_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:background="@color/color_preloader_end"
        app:layout_constraintBottom_toTopOf="@+id/btn_stock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_stock"
        android:layout_width="87dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:background="@color/color_preloader_black"
        android:text="Stock"
        android:textColor="@color/color_preloader_end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_capital_gain"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_capital_gain"
        android:layout_width="95dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/color_preloader_black"
        android:text="Capital Gain"
        android:textColor="@color/color_preloader_end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_stock" />
</android.support.constraint.ConstraintLayout>